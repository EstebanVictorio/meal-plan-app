{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node":true,
        "amd": true,
        "jest/globals":true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules":{
        "no-unused-vars":["warn"],
        "react/react-in-jsx-scope":["none"],
        "react/display-name":["warn"],
        "no-console":["warn"],
        "react-hooks/rules-of-hooks": ["error"]
    },
    "plugins":[
        "jest",
        "react-hooks"
    ]
}